{
  "name": "ng2-webpack",
  "version": "1.0.0",
  "description": "basic environment",
  "main": "index.js",
  "scripts": {
    "start": "set NODE_ENV=development&& npm run serve",
    "start:aot": "set NODE_ENV=production&& npm run serve:aot",
    "start:os": "export NODE_ENV=development&& npm run serve",
    "start:os:aot": "export NODE_ENV=production&& npm run serve:aot",
    "serve": "npm run lint&& webpack-dev-server --config  webpack.config.dev.js --color --progress",
    "serve:aot": "npm run lint&& webpack-dev-server --config  webpack.config.aot.js --color --progress",
    "build": "set NODE_ENV=production&& npm run dist",
    "build:os": "export NODE_ENV=production&& npm run dist",
    "dist": "npm run remove:dist && webpack --config webpack.config.aot.js -p --progress --color",
    "remove:dist": "rm -rf dist",
    "lint": "tslint 'src/**/*.ts' --force",
    "delete": "find ./src -name '*.js' -delete && find ./src -name '*.map' -delete"
  },
  "author": "deot",
  "license": "MIT",
  "dependencies": {
    "@angular/common": "^4.0.1",
    "@angular/compiler": "^4.0.1",
    "@angular/core": "^4.0.1",
    "@angular/forms": "^4.0.1",
    "@angular/http": "^4.0.1",
    "@angular/platform-browser": "^4.0.1",
    "@angular/platform-browser-dynamic": "^4.0.1",
    "@angular/router": "^4.0.1",
    "core-js": "^2.4.1",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.3.0",
    "zone.js": "^0.8.5"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^4.0.1",
    "@ngtools/webpack": "^1.3.0",
    "@types/node": "^7.0.5",
    "angular2-router-loader": "^0.3.5",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^3.1.2",
    "codelyzer": "^2.0.1",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.26.1",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "file-loader": "^0.10.0",
    "html-webpack-plugin": "^2.28.0",
    "node-sass": "^4.5.0",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.2",
    "style-loader": "^0.13.1",
    "tslint": "^4.4.2",
    "typescript": "^2.2.1",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1",
    "webpack-merge": "^3.0.0"
  }
}
